-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= render partial: 'ratings_form', locals: {all_ratings: @all_ratings}

%table#movies
  %thead
    %tr
      %th{class: table_header_class('title')}
        %a{id: 'title_header', href: movies_path(sort_by: 'title')} Movie Title
      %th Rating
      %th{class: table_header_class('release_date')}
        %a{id: 'release_date_header', href: movies_path(sort_by: 'release_date')} Release Date
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
